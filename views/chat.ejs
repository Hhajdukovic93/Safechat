<!DOCTYPE html>
<html lang="en">

	<head>
		<title>Safechat</title>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="/stylesheets/style.css"> 
		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
		<script type="text/javascript" src="javascripts/safechat.js"></script> 
	</head>

	<body>
		<div class="container-fluid">	
			
			<div id="messageArea" class="row">
				<div class="col-sm-4">
					<div class="well">
						<h3>Online Users</h3>						
						<ul class ="list-group" id="users">
						    <% for (var i = 0; i < users.length; i++) { %>
							    <li >						     
							         <%= users[i] %>						           						
							    </li>
						    <% } %>
						</ul>
					</div>					
				</div>
				<div class="col-sm-8">
					<div class="chat" id="chat"></div>
					<form id="messageForm">
						<div class="form-group">
							<label> Enter Message : </label>
							<textarea class="form-control" id="message"></textarea>
							<br/>
							<input type="submit" class="btn btn-primaty" value="Send Message">
						</div>
					</form>
				</div>

				<div id="main">
					<div id="right">
						<!-- SHOW IMGAGE -->
						<div id="original" class="half">
							<h2>Plain Image:</h2>
							<!-- DEFAULT IMAGE -->
							<img id="img" src="/images/test.jpg"/>
						</div>
						<!-- SHOW STEGO IMAGE -->
						<div id="stego" class="half">
							<h2>Encoded Image:</h2>
							<img id="cover" src=""/>
						</div>
					</div>
				</div> 
			</div>

		</div> <!-- / of container fluid -->
	</body>
</html>